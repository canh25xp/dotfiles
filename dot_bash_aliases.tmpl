alias cz=chezmoi
cfg() {
  local query="${1:-}"

  # Change to home directory
  pushd "$HOME" >/dev/null || return 1

  # Get the list of files managed by chezmoi
  local chezmoi_files
  chezmoi_files=$(chezmoi managed -p relative -i files -x externals 2>/dev/null)

  local selected_file
  if [[ -n "$query" ]]; then
    selected_file=$(echo "$chezmoi_files" | fzf --preview "bat --color=always {}" --query $query -1 -0)
  else
    selected_file=$(printf '%s\n' "$chezmoi_files" | fzf --preview "bat --color=always {}")
  fi

  # Open selected file if one was chosen
  if [[ -n "$selected_file" ]]; then
    "${EDITOR:-nvim}" "$selected_file"
  fi

  # Return to original location
  popd >/dev/null || return 1
}

