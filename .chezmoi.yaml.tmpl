format : yaml

progress : true

edit:
  apply : false

git:
  autoCommit : true
  autoPush : false

diff:
  pager : "delta"

merge:
  command: nvim
  args:
    - -d
    - "{{ "{{" }} .Destination {{ "}}" }}"
    - "{{ "{{" }} .Source {{ "}}" }}"
    - "{{ "{{" }} .Target {{ "}}" }}"

{{- if eq .chezmoi.os "windows" }}
cd:
  command: "pwsh"
{{- end }}
