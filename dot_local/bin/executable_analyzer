#!/usr/bin/env bash

VERSION="v0.1"

print_usage() {
  echo "Usage: analyzer <log_file> [<info_type>]"
  echo "       analyzer --version"
  echo "       analyzer --help"
  echo ""
  echo "Arguments:"
  echo "  <log_file>    Path to the Android Dumpstate log file."
  echo "  <info_type>   Type of information to extract (e.g., 'scan-results')."
  echo "                If not provided, fzf will be used to select interactively."
  echo ""
  echo "Available info_types:"
  echo "  scan-results  : Extracts the latest Wi-Fi scan results."
  echo "  build-id      : Extracts the system build ID (ro.system.qb.id or ro.version.qb.id)."
}

print_version() {
  echo "Dumpstate log analyzer ${VERSION}"
}

if [ "$#" -eq 0 ]; then
  print_version
  print_usage
  exit 0
fi

while [ "$#" -gt 0 ]; do
  case "$1" in
  --version)
    print_version
    exit 0
    ;;
  --help)
    print_usage
    exit 0
    ;;
  -*)
    echo "Error: Unknown option: $1" >&2
    print_usage
    exit 1
    ;;
  *)
    break
    ;;
  esac
done

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
  echo "Error: Invalid number of arguments." >&2
  print_usage
  exit 1
fi

LOG_FILE="$1"

# If info_type is not provided, use fzf to select
if [ "$#" -eq 1 ]; then
  # Check if fzf is installed
  if ! command -v fzf &>/dev/null; then
    echo "Error: fzf is not installed. Please install fzf or provide info_type as second argument." >&2
    exit 1
  fi

  # Use fzf to select info_type
  INFO_TYPE=$(printf "scan-results\nbuild-id\n" | fzf --prompt="Select info type: " --height=40%)

  # Check if user selected something or cancelled
  if [ -z "$INFO_TYPE" ]; then
    echo "No selection made. Exiting." >&2
    exit 1
  fi
else
  INFO_TYPE="$2"
fi

if [ ! -f "$LOG_FILE" ]; then
  echo "Error: Log file not found: $LOG_FILE" >&2
  exit 1
fi

latest_scan_results() {
  local log_file="$1"
  awk '
    /^Latest scan results:/ {flag=1; next}
    flag {print}
    flag && /^$/ {exit}
    ' "$log_file"
}

extract_build_id() {
  local log_file="$1"
  grep -a -E '(\[ro\.system\.qb\.id\]|\[ro\.vendor\.qb\.id\])' "$log_file" || true
}

case "$INFO_TYPE" in
"scan-results")
  latest_scan_results "$LOG_FILE"
  ;;
"build-id")
  extract_build_id "$LOG_FILE"
  ;;
*)
  echo "Error: Unknown info type: $INFO_TYPE" >&2
  print_usage
  exit 1
  ;;
esac
