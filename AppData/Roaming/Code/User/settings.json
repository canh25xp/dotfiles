{
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.tree.expandMode": "doubleClick",
    // "terminal.integrated.cursorStyle": "line",
    "task.slowProviderWarning": true,
    "settingsSync.ignoredExtensions": [],
    "task.problemMatchers.neverPrompt": false,
    "workbench.startupEditor": "none",
    "notebook.diff.enablePreview": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "manim-sideview.previewLooping": false,
    "cmake.debugConfig": {
        "console": "integratedTerminal"
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "workbench.tree.renderIndentGuides": "always",
    "window.restoreFullscreen": true,
    "verilog.linting.linter": "modelsim",
    "notebook.diff.ignoreOutputs": true,
    "verilog.ctags.path": "ctags",
    "C_Cpp.autocompleteAddParentheses": true,
    "cmake.showOptionsMovedNotification": false,
    "git-graph.showStatusBarItem": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/k",
                "%USERPROFILE%\\batchrc.bat"
            ],
            "icon": "terminal-cmd"
        },
        "Developer Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/k",
                "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat",
                "-startdir=none",
                "-arch=x64",
                "-host_arch=x64"
            ],
            "icon": "terminal-cmd",
            "color": "terminal.ansiMagenta",
            "overrideName": true
        },
    },
    "terminal.integrated.commandsToSkipShell": [
        // Ensure the toggle sidebar visibility keybinding skips the shell
        "workbench.action.toggleSidebarVisibility",
        "-workbench.action.closeWindow",
        "-workbench.action.quickOpenView",
        "-workbench.action.focusActiveEditorGroup",
        "-workbench.explorer.fileView.focus"
    ],
    "explorer.incrementalNaming": "smart",
    "explorer.autoReveal": false,
    "gitlens.graph.layout": "editor",
    "workbench.view.alwaysShowHeaderActions": true,
    "scm.defaultViewMode": "tree",
    "cmake.options.statusBarVisibility": "compact",
    "editor.minimap.autohide": true,
    "cmake.configureOnEdit": false,
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "git.confirmSync": false,
    "git.showPushSuccessNotification": true,
    "git.supportCancellation": true,
    "cmake.configureOnOpen": false,
    "editor.formatOnType": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "remote.autoForwardPortsSource": "hybrid",
    "todo-tree.highlights.useColourScheme": true,
    "cmake.automaticReconfigure": false,
    "terminal.integrated.smoothScrolling": true,
    "git.enableStatusBarSync": false,
    "cmake.buildBeforeRun": false,
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.theme": "min",
    "diffEditor.ignoreTrimWhitespace": false,
    "hediet.vscode-drawio.codeLinkActivated": true,
    "git.closeDiffOnOperation": true,
    "redhat.telemetry.enabled": true,
    "jupyter.askForKernelRestart": false,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.linting.run": "onType",
    "arduino.useArduinoCli": true,
    "editor.fontFamily": "CaskaydiaCove Nerd Font, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "powershell.enableReferencesCodeLens": false,
    "powershell.integratedConsole.showOnStartup": false,
    "arduino.path": "C:\\Program Files\\Arduino CLI",
    "arduino.clearOutputOnBuild": true,
    "git.useEditorAsCommitInput": false,
    "idf.saveScope": 2,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "[latex]": {},
}