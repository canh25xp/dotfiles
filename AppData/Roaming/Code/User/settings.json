{
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.tree.expandMode": "doubleClick",
    "task.slowProviderWarning": true,
    "settingsSync.ignoredExtensions": [],
    "task.problemMatchers.neverPrompt": false,
    "workbench.startupEditor": "none",
    "notebook.diff.enablePreview": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "manim-sideview.previewLooping": false,
    "cmake.debugConfig": {
        "console": "integratedTerminal"
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "workbench.tree.renderIndentGuides": "always",
    "window.restoreFullscreen": true,
    "notebook.diff.ignoreOutputs": true,
    "C_Cpp.autocompleteAddParentheses": true,
    "cmake.showOptionsMovedNotification": false,
    "git-graph.showStatusBarItem": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/k",
                "%USERPROFILE%\\batchrc.bat"
            ],
            "icon": "terminal-cmd"
        },
        "Developer Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/k",
                "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat",
                "-startdir=none",
                "-arch=x64",
                "-host_arch=x64"
            ],
            "icon": "terminal-cmd",
            "color": "terminal.ansiMagenta",
            "overrideName": true
        },
    },
    "terminal.integrated.commandsToSkipShell": [
        // Ensure the toggle sidebar visibility keybinding skips the shell
        "workbench.action.toggleSidebarVisibility",
        "-workbench.action.closeWindow",
        "-workbench.action.quickOpenView",
        "-workbench.action.focusActiveEditorGroup",
        "-workbench.explorer.fileView.focus"
    ],
    "explorer.incrementalNaming": "smart",
    "explorer.autoReveal": false,
    "gitlens.graph.layout": "editor",
    "workbench.view.alwaysShowHeaderActions": true,
    "scm.defaultViewMode": "tree",
    "cmake.options.statusBarVisibility": "compact",
    "editor.minimap.autohide": true,
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "git.confirmSync": false,
    "git.showPushSuccessNotification": true,
    "git.supportCancellation": true,
    "cmake.configureOnOpen": false,
    "editor.formatOnType": true,
    "remote.autoForwardPortsSource": "hybrid",
    "todo-tree.highlights.useColourScheme": true,
    "cmake.automaticReconfigure": false,
    "terminal.integrated.smoothScrolling": true,
    "git.enableStatusBarSync": false,
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.theme": "min",
    "diffEditor.ignoreTrimWhitespace": false,
    "hediet.vscode-drawio.codeLinkActivated": true,
    "git.closeDiffOnOperation": true,
    "redhat.telemetry.enabled": true,
    "jupyter.askForKernelRestart": false,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.linting.run": "onType",
    "arduino.useArduinoCli": true,
    "editor.fontFamily": "CaskaydiaCove Nerd Font, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "powershell.enableReferencesCodeLens": false,
    "powershell.integratedConsole.showOnStartup": false,
    "arduino.path": "C:\\Program Files\\Arduino CLI",
    "arduino.clearOutputOnBuild": true,
    "git.useEditorAsCommitInput": false,
    "idf.saveScope": 2,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "[latex]": {},
    "workbench.colorTheme": "Catppuccin Mocha",
    "extensions.ignoreRecommendations": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "editor.lineNumbers": "relative",
    "vscode-neovim.useWSL": true,
    "vscode-neovim.NVIM_APPNAME": "nvim-lazy",
    "vscode-neovim.compositeKeys": {
        "jk": {
            "command": "vscode-neovim.escape",
        },
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1,
        "vscodevim.vim": 1
    },
    "editor.cursorBlinking": "solid",
    "git.enableSmartCommit": true,
    "editor.cursorSurroundingLines": 4,
    "editor.suggest.insertMode": "replace",
    /*
    VSCodeVim settings 
    */
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 200,
    "vim.highlightedyank.color": "rgba(255, 105, 180, 155)",
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "vim.vimrc.enable": true,
    // "vim.insertModeKeyBindings": [
    //     { "before": [ "j", "k" ], "after": [ "<Esc>" ] }
    // ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // { "before": ["<ESC>"], "commands": [":noh"] },
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": [ "<leader>", "\\" ], "commands": [ ":vsplit" ] },
        { "before": [ "<leader>", "-" ], "commands": [ ":split" ] },
        { "before": ["<leader>", "b", "d"], "commands": ["workbench.action.closeActiveEditor"] },
        { "before": [":"], "commands": [ "workbench.action.showCommands", ], "silent": true },
        { "before": [ "<leader>", "d", "b" ], "commands": [ "editor.debug.action.toggleBreakpoint" ] },
        { "before": [ "<leader>", "c", "r" ], "commands": [ "editor.action.rename" ] },
        { "before": [ "<leader>", "c", "f" ], "commands": [ "editor.action.formatDocument" ] },
        { "before": [ "K" ], "commands": [ "editor.action.showHover" ], "silent": true },
        { "before": [ "<leader>", "w" ], "commands": [ "workbench.action.splitEditor" ] },
        { "before": [ "<leader>", "e" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
        { "before": [ "<leader>", "E" ], "commands": [ "revealInExplorer" ] },
        // LSP
        { "before": ["g", "d"], "commands": ["editor.action.goToDefinition"] },
        { "before": ["g", "p", "d"], "commands": ["editor.action.peekDefinition"] },
        { "before": ["g", "h"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["g", "I"], "commands": ["editor.action.goToImplementation"] },
        { "before": ["g", "p", "i"], "commands": ["editor.action.peekImplementation"] },
        { "before": ["g", "r"], "commands": ["editor.action.referenceSearch.trigger"] },
        { "before": ["g", "Y"], "commands": ["editor.action.goToTypeDefinition"] },
        { "before": ["g", "p", "t"], "commands": ["editor.action.peekTypeDefinition"] },

    ],
    "vim.visualModeKeyBindings": [
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
        { "before": [ "<leader>", "c", "f" ], "commands": [ "editor.action.formatSelection" ] },
    ],
}