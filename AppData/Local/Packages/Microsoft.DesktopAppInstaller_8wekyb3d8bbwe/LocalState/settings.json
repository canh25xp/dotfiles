{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    "experimentalFeatures": {
        "dependencies": true,
        "directMSI": false,
        "zipInstall": false
    },
    "visual": {
        "progressBar": "rainbow"
    },
    "source": {
        "autoUpdateIntervalInMinutes": 60
    },
    "installBehavior": {
        "preferences": {
            "scope": "user"
        }
    },
    "uninstallBehavior": {
        "purgePortablePackage": true
    },
    "logging": {
        "level": "verbose"
    },
    "network": {
        "downloader": "wininet"
    }
}
