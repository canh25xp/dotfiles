{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "palette": {
    "os": "#ACB0BE",
    "pink": "#F5BDE6",
    "lavender": "#B7BDF8",
    "blue": "#8AADF4",
    "wight": "#FFFFFF",
    "text": "#494D64"
  },
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "background": "p:blue",
          "foreground": "p:text",
          "powerline_symbol": "",
          "leading_diamond": "",
          "template": "{{ .Icon }} "
        },
        {
          "type": "session",
          "style": "diamond",
          "background": "p:blue",
          "foreground": "p:text",
          "powerline_symbol": "",
          "template": "{{ .UserName }}@{{ .HostName }}"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "p:pink",
          "foreground": "p:text",
          "properties": {
            "style": "full"
          },
          "template": "  {{ .Path }}"
        },
        {
          "type": "git",
          "background": "p:lavender",
          "foreground": "p:text",
          "style": "powerline",
          "properties": {
            "branch_icon": " ",
            "cherry_pick_icon": " ",
            "commit_icon": " ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": " ",
            "no_commits_icon": " ",
            "rebase_icon": " ",
            "revert_icon": " ",
            "tag_icon": " "
          },
          "powerline_symbol": "",
          "template": " {{ .HEAD }}"
        }
      ]
    }
  ]
}