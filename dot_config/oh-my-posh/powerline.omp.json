{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "background": "p:purple",
          "foreground": "p:yellow",
          "template": "  "
        },
        {
          "type": "os",
          "style": "powerline",
          "background": "p:purple",
          "foreground": "p:black",
          "template": " {{ .Icon }} "
        },
        {
          "type": "session",
          "style": "powerline",
          "background": "p:purple",
          "foreground": "p:black",
          "template": "{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "p:cyan",
          "foreground": "p:black",
          "properties": {
            "style": "full"
          },
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "p:green",
          "foreground": "p:brightBlack",
          "template": " {{ .HEAD }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "p:blue",
          "foreground": "p:black",
          "template": "  {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
        },
        {
          "type": "status",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "p:red",
          "foreground": "p:white",
          "template": "  {{ .Code }} "
        }
      ]
    }
  ],
  "palette": {
    "black": "#000000",
    "brightBlack": "#193549",
    "white": "#FFFFFF",
    "blue": "#7AA2F7",
    "cyan": "#7DCFFF",
    "green": "#95FFA4",
    "pink":"#EFDCF9",
    "purple": "#BB9AF9",
    "red": "#F7768E",
    "yellow": "#FFEE58"
  }
}
