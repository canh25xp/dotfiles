# When selecting text with mouse, copy to clipboard
set selection-clipboard clipboard

# Show Statusbar and Verticle scrollbar 
set guioptions sv

# Width and Height
set window-height 800
set window-width 600

# Default Startip
set adjust-open width

# Set title
set window-title-basename true
set window-title-home-tilde true

# Set Statusbar
set statusbar-home-tilde true

map [normal] <M-Return> toggle_fullscreen
map [fullscreen] <M-Return> toggle_fullscreen


