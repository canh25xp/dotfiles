{
  "$schema": "./schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 70,
      "right": 0,
      "bottom": 70
    }
  },
  "font_family": "Cascadia Code",
  "font_size": 12,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Pink"
  },
  "max_label_width": 300,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true,
        "label_prefix": "IconAndText",
        "data_refresh_interval": 10
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": true,
        "show_network_activity": true,
        "label_prefix": "Icon",
        "data_refresh_interval": 10
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": false,
        "format": "TwentyFourHour"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
