{
  "$schema": "./schema.bar.json",
  "monitor": {
    "index": 1,
    "work_area_offset": {
      "left": 0,
      "top": 50,
      "right": 0,
      "bottom": 50
    }
  },
  "font_family": "Cascadia Code Regular",
  "font_size": 12,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Pink"
  },
  "max_label_width": 300,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": []
}
