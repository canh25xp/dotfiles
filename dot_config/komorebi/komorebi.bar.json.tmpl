{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/refs/heads/master/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": {{ .barHeight }},
      "right": 0,
      "bottom": {{ .barHeight }}
    }
  },
  "position": {
    "start": {
      "x": 0,
      "y": 0
    },
    "end": {
      "x": {{ .screenWidth }},
      "y": {{ .barHeight }}
    }
  },
  "font_family": "Cascadia Code",
  "font_size": {{ .fontSize }},
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Pink"
  },
  "max_label_width": 200,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true,
        "label_prefix": "IconAndText",
        "data_refresh_interval": 10
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": true,
        "show_network_activity": true,
        "label_prefix": "Icon",
        "data_refresh_interval": 10
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": false,
        "format": "TwentyFourHour"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
