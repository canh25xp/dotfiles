"$schema" = 'https://starship.rs/config-schema.json'

add_newline = false
command_timeout = 3000
scan_timeout = 15

[cmd_duration]
min_time = 1000
show_milliseconds = true

[character]
success_symbol = "[❯](green)"
error_symbol = "[❯](red)"

[username]
show_always = true
style_user = "purple italic"
aliases = { "Administrator" = "root", {{ .phoneUserName | quote }} = {{ .phoneDeviceName | quote }}, {{ .tabletUserName | quote }} = {{ .tabletDeviceName | quote }} }

[directory]
truncate_to_repo = true
truncation_length = 0

[os]
style = "bold blue"
disabled = false

[os.symbols]
Android = " "
Debian = " "
Ubuntu = " "
Windows = " "

[package]
disabled = true

[container]
disabled = true

[git_metrics]
disabled = {{ if and .work .windows -}} true {{- else -}} false {{- end}}

[git_status]
disabled = {{ if and .work .windows -}} true {{- else -}} false {{- end}}

[git_branch]
disabled = false

{{ if not .android -}}
[battery]
disabled = true
{{ end -}}

[env_var.CHEZMOI_SECRETS]
variable = "CHEZMOI_SECRETS"
symbol = " "
style = "purple"
format = "[$symbol]($style) "
