# Credential
set from = "canh25xp@gmail.com"
set realname = "Ngô Văn Cảnh"
set imap_user = "canh25xp@gmail.com"
set smtp_url = "smtps://canh25xp@smtp.gmail.com"
source "gpg2 -dq ~/.config/neomutt/gmail.gpg |"

# General settings
color status green default
set abort_nosubject = no
set mail_check = 60
set timeout = 10
set sort = "reverse-date-received"
set copy = no
set header_cache="~/.cache/neomutt/"
set message_cachedir="~/.cache/neomutt/"
set sidebar_visible = no
set sidebar_format = "%B%<F? [%F]>%* %<N?%N/>%S"
set mail_check_stats

# Remote Gmail folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"

# Keymaps
bind index,pager B sidebar-toggle-visible

# Theme
source ~/.config/neomutt/colors.muttrc
