# Credential
set from = "canh25xp@gmail.com"
set realname = "Ngô Văn Cảnh"
set imap_user = "canh25xp@gmail.com"
set smtp_url = "smtps://canh25xp@smtp.gmail.com"

# set imap_pass = "mypassword"
source "gpg -dq ~/.config/neomutt/gmail.gpg |"

# General settings
color status green default
set abort_nosubject = no
set mail_check = 60
set timeout = 10
set sort = "reverse-date-received"
set copy = no
set header_cache="~/.cache/neomutt/"
set message_cachedir="~/.cache/neomutt/"
set sidebar_visible = no
set sidebar_format = "%B%<F? [%F]>%* %<N?%N/>%S"
set mail_check_stats
set editor = "nvim"
set tilde                            # use ~ to pad mutt

# Remote Gmail folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"

# Keymaps
bind index,pager B sidebar-toggle-visible
macro index A \
    "<tag-pattern>~N<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" \
    "mark all new as read"

bind index j next-entry
bind index k previous-entry
bind pager j next-line
bind pager k previous-line

bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

# Theme
source ~/.config/neomutt/colors.muttrc
