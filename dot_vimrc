let mapleader=" "

set showmode
set clipboard=unnamedplus
set hlsearch
set number
set relativenumber
set smartcase
set ignorecase
set incsearch
set scrolloff=5
set notimeout
set timeoutlen=5000

imap jk <ESC>
"nmap <ESC> :noh<CR>
nnoremap <silent> <ESC> :nohlsearch<CR>
nmap <S-H> :bprevious<CR>
nmap <S-L> :bnext<CR>
map Q gq
map U <C-R>
