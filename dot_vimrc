let mapleader=" "

set clipboard=unnamedplus
set showmode
set hlsearch
set number
set relativenumber
set smartcase
set ignorecase
set incsearch
set scrolloff=5
set notimeout
set timeoutlen=1000
set splitbelow
set splitright
set laststatus=2

imap jk <ESC>

nmap <silent> <ESC> :nohlsearch<CR>
map Q gq
map U <C-R>

" buffer
nmap <S-H> :bprevious<CR>
nmap <S-L> :bnext<CR>

nmap <C-k> <C-w>k
nmap <C-j> <C-w>j
nmap <C-h> <C-w>h
nmap <C-l> <C-w>l

map <leader>- :split<CR>
map <leader>\ :vsplit<CR>

nmap <leader>qq :qa<CR>
